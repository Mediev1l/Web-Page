@model WebApp.Models.Movie
@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@Model.Name</h2>
<ul>
    <li>Genre: @Model.Genre.Name</li>
    <li>Release Date: @Model.ReleaseDate.ToString("yyyy-M-d dddd")</li>
    <li>Date  Added: @Model.DateAdded.ToString("yyyy-M-d dddd")</li>
    <li>Number in Stock: @Model.StockNumber</li>
                                                           </ul>
